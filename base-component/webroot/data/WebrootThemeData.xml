<entity-facade-xml type="seed-initial">
    <!-- Default Theme (note that DEFAULT ScreenTheme record defined in ScreenEntities.xml) -->

    <!-- Core resources for the default theme now align with the Quasar-based UI -->
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="1" resourceTypeEnumId="STRT_STYLESHEET" resourceValue=""/>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="2" resourceTypeEnumId="STRT_STYLESHEET"
            resourceValue="/libs/font-awesome/css/font-awesome.min.css"/>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="3" resourceTypeEnumId="STRT_STYLESHEET"
            resourceValue="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900|Material+Icons"/>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="4" resourceTypeEnumId="STRT_STYLESHEET"
            resourceValue="/libs/quasar/quasar.min.css"/>

    <!-- Add external theme(s) here  -->
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="10" resourceTypeEnumId="STRT_STYLESHEET" resourceValue=""/>

    <!-- Webroot layout overrides for Quasar-based UI -->
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="20" resourceTypeEnumId="STRT_STYLESHEET"
            resourceValue="/css/WebrootVue.qvt.css"/>

    <!-- Supporting script resources for Quasar runtime -->
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="50" resourceTypeEnumId="STRT_SCRIPT"
            resourceValue="/libs/jquery/jquery.min.js"/>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="51" resourceTypeEnumId="STRT_SCRIPT"
            resourceValue="/js/MoquiLib.js"/>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="52" resourceTypeEnumId="STRT_SCRIPT"
            resourceValue="/libs/moment.js/moment-with-locales.min.js"/>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="53" resourceTypeEnumId="STRT_SCRIPT"
            resourceValue="/libs/vue/vue.min.js"/>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="54" resourceTypeEnumId="STRT_SCRIPT"
            resourceValue="/libs/quasar/quasar.umd.min.js"/>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="55" resourceTypeEnumId="STRT_SCRIPT"
            resourceValue="/js/WebrootVue.qvt.js"/>

    <!-- Logo, icon, body class -->
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="100" resourceTypeEnumId="STRT_HEADER_LOGO"
            resourceValue="/images/MoquiLogoSmall.png"/>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="101" resourceTypeEnumId="STRT_SHORTCUT_ICON"
            resourceValue="/favicon.ico"/>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="102" resourceTypeEnumId="STRT_BODY_CLASS"
            resourceValue="bg-light"/>

    <!-- Footer items -->
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="200" resourceTypeEnumId="STRT_FOOTER_ITEM">
        <resourceValue><![CDATA[<p><a href="https://www.moqui.org/" target="_blank">${ec.resource.expand('Built on Moqui Framework ${ec.factory.moquiVersion}', '')}</a></p>]]></resourceValue>
    </moqui.screen.ScreenThemeResource>
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT" sequenceNum="201" resourceTypeEnumId="STRT_FOOTER_ITEM">
        <resourceValue><![CDATA[<p><a href="/vapps/ScreenTree">${ec.l10n.localize('Site Map')}</a></p>]]></resourceValue>
    </moqui.screen.ScreenThemeResource>
</entity-facade-xml>
